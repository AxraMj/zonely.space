{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.zonely.space"
        }
      ],
      "permanent": true,
      "destination": "https://zonely.space/:path*"
    },
    {
      "source": "/assets/:path*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "/(.*)",
      "headers": {
        "cache-control": "s-maxage=1, stale-while-revalidate"
      },
      "destination": "/index.html"
    }
  ]
} 