{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\\\.).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path((?!well-known(?:/.*)?).*)",
      "has": [
        {
          "type": "host",
          "value": "www.zonely.space"
        }
      ],
      "destination": "https://zonely.space/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/((?!.*\\\\.).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 